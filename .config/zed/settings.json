// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  //"assistant": {
  //  "default_model": {
  //    "provider": "zed.dev",
  //     "model": "claude-3-5-sonnet-20240620"
  //  },
  //  "version": "2"
  //},
  "telemetry": {
    "metrics": false
  },
  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Atelier Heath Light"
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  // "buffer_font_family": "Zed Plex Mono", // default
  // "buffer_font_family": "Liga SFMono Nerd Font",
  "languages": {
    "Markdown-Inline": {
      "show_inline_completions": false
    },
    "Markdown": {
      "show_inline_completions": false
    },
    "HTML": {
      // "show_inline_completions": false
    },
    "Rust": {
      "format_on_save": "on"
    },
    "TOML": {
      "format_on_save": "on"
    }
  },
  "inlay_hints": {
    "enabled": true,
    // "show_type_hints": true,
    // "show_parameter_hints": true,
    // "show_other_hints": true,
    // "edit_debounce_ms": 700,
    // "scroll_debounce_ms": 50
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial"
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        // "checkOnSave": {
        //   "command": "clippy"
        //},
        "formatting": {
          "formatOnSave": true
        },
        // Use `-p` instead of `--workspace` for cargo check
        "check": {
          "workspace": false
        }
      }
    }
  },
  "semantic_index": {
    "enabled": true
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_smartcase_find": true
  },
  "show_whitespaces": "selection",
  "tab_bar": {
    "show": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "gutter": {
    "folds": false
  },
  "project_panel": {
    "button": false
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "line_width": 4
  },
  "features": {
    "inline_completion_provider": "supermaven"
    // "inline_completion_provider": "copilot"
  },
  "show_inline_completions": true,
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620-fast-edit"
    },
    "version": "2",
    "provider": "zed.dev"
  },
  "show_completions_on_input": true,
  "preview_tabs": {
    "enabled": false
  },
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  }
}
